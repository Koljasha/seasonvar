{
	"manifest_version": 2,

	"name": "Seasonvar & ColdFilm",
	"description": "Просмотр Seasonvar и ColdFilm",
	"author": "Koljasha",
	"version": "1.0.1.2",

	"icons": {
		"16": "icon_16.png",
		"48": "icon_48.png",
		"128": "icon_128.png"
	},	

	"background": {
		"scripts": ["eventPage.js"]
	},

	"permissions": [
		"tabs",
		"activeTab",
		"contextMenus",
		"*://*.datalock.ru/*",
		"*://*.apollostream.xyz/*",
		"https://serial.koljasha.ru/api/*"
	],

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

	"browser_action": {
		"default_icon": {
      		"16": "icon_16_def.png"
    	},
		"default_title": "Seasonvar & ColdFilm"
	}
}
