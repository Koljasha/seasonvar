{
	"manifest_version": 2,

	"name": "Seasonvar & ColdFilm",
	"description": "Просмотр Seasonvar и ColdFilm в HD по прямым ссылкам",
	"author": "Koljasha",
	"developer": {
		"name": "Koljasha"
 	},
	"version": "1.0.0.3",

	"icons": {
		"16": "icon_16.png",
		"48": "icon_48.png",
		"128": "icon_128.png"
	},	

	"background": {
		"scripts": ["eventPage.js"]
	},

	"permissions": [
		"tabs",
		"activeTab",
		"http://data-hd.datalock.ru/*",
		"https://serial.koljasha.ru/api/*"
	],
	
	"browser_action": {
		"default_icon": {
      		"16": "icon_16_def.png"
    	},
		"default_title": "Seasonvar & ColdFilm"
	}
}
